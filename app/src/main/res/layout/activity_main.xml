<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a10516125940.cantineiros.Controller.MainActivity">

    <TextView
        android:id="@+id/textView_Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="@string/app_name"
        android:textSize="@android:dimen/app_icon_size"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="33dp" />

    <EditText
        android:id="@+id/editText_Usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_Titulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView_Esqueceu_Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_senha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="@string/esqueceu_senha" />

    <Button
        android:id="@+id/botaoEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:text="Entrar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_Usuario"
        android:layout_alignStart="@+id/editText_Usuario"
        android:layout_below="@+id/textView_Titulo"
        android:layout_marginTop="24dp"
        android:text="@string/texto_usuario"
        android:textSize="@dimen/fab_margin" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_Usuario"
        android:layout_alignStart="@+id/editText_Usuario"
        android:layout_below="@+id/editText_Usuario"
        android:layout_marginTop="23dp"
        android:text="@string/texto_senha"
        android:textSize="@dimen/fab_margin" />

    <EditText
        android:id="@+id/editText_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textViewCriarUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_Esqueceu_Senha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Criar novo UsuÃ¡rio" />
</RelativeLayout>
